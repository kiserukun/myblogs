<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @name %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= "ユーザー名" %></td>
          </tr>
        </tbody>
      </table>
      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
         <div class="card__wrapper">
       <% @blogs.each do |blog| %>
         <%= link_to blog_path(blog.id) do %>
     <div class="card">
         <%= image_tag blog.image, class: "card__img" %>
      <div class="card__body">
         <%= link_to blog.title, blog_path(blog.id), class: :card__title%>
         <%= l blog.created_at %>
         <%= link_to blog.user.name, root_path,method: :get, class: :card__user %>
        </div>
       </div>
       <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>